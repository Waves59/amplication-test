datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  profiles  Profile[]
  roles     String[]
  teams     Team[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Profile {
  bio       String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Team {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  projects  Project[]
  updatedAt DateTime  @updatedAt
  users     User[]
}

model Project {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
  title     String
  updatedAt DateTime @updatedAt
}